<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Recipe Details - Recipe Admin Panel</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <!-- Prism.js for code highlighting -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/themes/prism.min.css" rel="stylesheet">
</head>

<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <%- include('../layouts/sidebar') %>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Header -->
            <%- include('../layouts/header') %>

            <!-- Content -->
            <div class="content">
                <div class="container-fluid">
                    <!-- Page Title -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center">
                                <h1 class="h3 mb-0">AI Recipe Details</h1>
                                <div class="d-flex gap-2">
                                    <a href="/ai-recipes" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left"></i> Back to List
                                    </a>
                                    <button class="btn btn-danger" onclick="confirmDelete('<%= aiRecipe._id %>', '<%= aiRecipe.recipeName %>')">
                                        <i class="fas fa-trash"></i> Delete Recipe
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Recipe Details -->
                    <div class="row">
                        <!-- Left Column - Recipe Info -->
                        <div class="col-lg-8">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0">
                                        <i class="fas fa-robot text-primary me-2"></i>
                                        <%= aiRecipe.recipeName %>
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <!-- Recipe Metadata -->
                                    <div class="row mb-4">
                                        <div class="col-md-3">
                                            <div class="text-center p-3 bg-light rounded">
                                                <i class="fas fa-users text-primary mb-2"></i>
                                                <div><strong><%= aiRecipe.servingSize %></strong></div>
                                                <small class="text-muted">Servings</small>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="text-center p-3 bg-light rounded">
                                                <i class="fas fa-clock text-warning mb-2"></i>
                                                <div><strong><%= aiRecipe.cookingTime %> min</strong></div>
                                                <small class="text-muted">Cook Time</small>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="text-center p-3 bg-light rounded">
                                                <i class="fas fa-chart-line 
                                                    <% if(aiRecipe.difficultyLevel === 'Easy') { %>text-success<% } 
                                                    else if(aiRecipe.difficultyLevel === 'Medium') { %>text-warning<% } 
                                                    else { %>text-danger<% } %> mb-2"></i>
                                                <div><strong><%= aiRecipe.difficultyLevel %></strong></div>
                                                <small class="text-muted">Difficulty</small>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="text-center p-3 bg-light rounded">
                                                <i class="fas fa-robot text-info mb-2"></i>
                                                <div><strong>AI Generated</strong></div>
                                                <small class="text-muted">Source</small>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Tags -->
                                    <% if(aiRecipe.tags && aiRecipe.tags.length > 0) { %>
                                        <div class="mb-4">
                                            <h6><i class="fas fa-tags me-2"></i>Tags</h6>
                                            <% aiRecipe.tags.forEach(tag => { %>
                                                <span class="badge bg-secondary me-2"><%= tag %></span>
                                            <% }) %>
                                        </div>
                                    <% } %>

                                    <!-- Ingredients -->
                                    <% if(aiRecipe.ingredients && aiRecipe.ingredients.length > 0) { %>
                                        <div class="mb-4">
                                            <h6><i class="fas fa-list me-2"></i>Ingredients</h6>
                                            <ul class="list-group">
                                                <% aiRecipe.ingredients.forEach(ingredient => { %>
                                                    <li class="list-group-item">
                                                        <i class="fas fa-check text-success me-2"></i>
                                                        <%= ingredient %>
                                                    </li>
                                                <% }) %>
                                            </ul>
                                        </div>
                                    <% } %>

                                    <!-- Recipe Content -->
                                    <div class="mb-4">
                                        <h6><i class="fas fa-file-alt me-2"></i>Recipe Instructions</h6>
                                        <div class="border rounded p-3" style="background-color: #f8f9fa;">
                                            <pre class="mb-0" style="white-space: pre-wrap; font-family: inherit;"><%= aiRecipe.recipeContent %></pre>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Right Column - User Info & Meta -->
                        <div class="col-lg-4">
                            <!-- User Information -->
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h6 class="mb-0"><i class="fas fa-user me-2"></i>Created By</h6>
                                </div>
                                <div class="card-body">
                                    <% if(aiRecipe.userId) { %>
                                        <div class="d-flex align-items-center mb-3">
                                            <% if(aiRecipe.userId.avatar) { %>
                                                <img src="<%= aiRecipe.userId.avatar %>" alt="User Avatar" 
                                                     class="rounded-circle me-3" width="50" height="50">
                                            <% } else { %>
                                                <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" 
                                                     style="width: 50px; height: 50px;">
                                                    <i class="fas fa-user text-white"></i>
                                                </div>
                                            <% } %>
                                            <div>
                                                <strong><%= aiRecipe.userId.firstname %> <%= aiRecipe.userId.lastname %></strong><br>
                                                <small class="text-muted"><%= aiRecipe.userId.email %></small>
                                            </div>
                                        </div>
                                        <a href="/user?id=<%= aiRecipe.userId._id %>" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye me-1"></i>View User Profile
                                        </a>
                                    <% } else { %>
                                        <p class="text-muted">User information not available</p>
                                    <% } %>
                                </div>
                            </div>

                            <!-- Recipe Metadata -->
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Recipe Information</h6>
                                </div>
                                <div class="card-body">
                                    <div class="row g-2">
                                        <div class="col-6">
                                            <small class="text-muted">Recipe ID</small><br>
                                            <code class="small"><%= aiRecipe._id %></code>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">Created</small><br>
                                            <small><%= new Date(aiRecipe.createdAt).toLocaleDateString() %></small>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">Last Updated</small><br>
                                            <small><%= new Date(aiRecipe.updatedAt).toLocaleDateString() %></small>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">Source</small><br>
                                            <span class="badge bg-info">AI Generated</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Actions -->
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="mb-0"><i class="fas fa-cogs me-2"></i>Actions</h6>
                                </div>
                                <div class="card-body">
                                    <div class="d-grid gap-2">
                                        <button class="btn btn-outline-primary" onclick="copyRecipeContent()">
                                            <i class="fas fa-copy me-2"></i>Copy Recipe Content
                                        </button>
                                        <button class="btn btn-outline-success" onclick="exportRecipe()">
                                            <i class="fas fa-download me-2"></i>Export as PDF
                                        </button>
                                        <button class="btn btn-outline-info" onclick="shareRecipe()">
                                            <i class="fas fa-share me-2"></i>Share Recipe
                                        </button>
                                        <hr>
                                        <button class="btn btn-danger" onclick="confirmDelete('<%= aiRecipe._id %>', '<%= aiRecipe.recipeName %>')">
                                            <i class="fas fa-trash me-2"></i>Delete Recipe
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this AI recipe?</p>
                    <p><strong id="recipeNameToDelete"></strong></p>
                    <p class="text-danger"><small>This action cannot be undone.</small></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete Recipe</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Prism.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/components/prism-core.min.js"></script>
    
    <script>
        let recipeToDelete = null;

        function confirmDelete(recipeId, recipeName) {
            recipeToDelete = recipeId;
            document.getElementById('recipeNameToDelete').textContent = recipeName;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        document.getElementById('confirmDeleteBtn').addEventListener('click', function() {
            if (recipeToDelete) {
                window.location.href = `/delete-ai-recipe?id=${recipeToDelete}`;
            }
        });

        function copyRecipeContent() {
            const recipeContent = `<%= aiRecipe.recipeContent.replace(/\n/g, '\\n').replace(/"/g, '\\"') %>`;
            navigator.clipboard.writeText(recipeContent).then(function() {
                // Show success message
                const toast = document.createElement('div');
                toast.className = 'toast align-items-center text-white bg-success border-0 position-fixed top-0 end-0 m-3';
                toast.innerHTML = `
                    <div class="d-flex">
                        <div class="toast-body">
                            Recipe content copied to clipboard!
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                `;
                document.body.appendChild(toast);
                new bootstrap.Toast(toast).show();
                setTimeout(() => toast.remove(), 5000);
            }).catch(function() {
                alert('Failed to copy content to clipboard');
            });
        }

        function exportRecipe() {
            alert('Export functionality will be implemented soon!');
        }

        function shareRecipe() {
            const url = window.location.href;
            navigator.clipboard.writeText(url).then(function() {
                alert('Recipe URL copied to clipboard!');
            }).catch(function() {
                alert('Failed to copy URL to clipboard');
            });
        }
    </script>
</body>

</html>
