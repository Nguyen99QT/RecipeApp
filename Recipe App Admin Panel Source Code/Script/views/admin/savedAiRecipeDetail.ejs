<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Saved AI Recipe Detail - Recipe Admin Panel</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .recipe-image {
            max-width: 100%;
            height: 300px;
            object-fit: cover;
            border-radius: 10px;
        }
        .ingredient-item, .instruction-item {
            background: #f8f9fa;
            border-left: 4px solid #007bff;
            padding: 10px 15px;
            margin-bottom: 10px;
            border-radius: 0 5px 5px 0;
        }
        .tag-badge {
            font-size: 0.8rem;
            margin: 2px;
        }
        .user-avatar {
            width: 60px;
            height: 60px;
            object-fit: cover;
        }
        .recipe-meta {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 10px;
            padding: 20px;
        }
    </style>
</head>

<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <%- include('../layouts/sidebar') %>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Header -->
            <%- include('../layouts/header') %>

            <!-- Content -->
            <div class="content">
                <div class="container-fluid">
                    <!-- Breadcrumb -->
                    <nav aria-label="breadcrumb" class="mb-4">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="/dashboard">
                                    <i class="fas fa-home"></i> Dashboard
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="/saved-ai-recipes">
                                    <i class="fas fa-heart"></i> Saved AI Recipes
                                </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
                        </ol>
                    </nav>

                    <!-- Page Title -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center">
                                <h1 class="h3 mb-0">
                                    <i class="fas fa-heart text-danger me-2"></i>
                                    Chi tiết Saved AI Recipe
                                </h1>
                                <div class="d-flex gap-2">
                                    <a href="/saved-ai-recipes" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left"></i> Quay lại
                                    </a>
                                    <a href="/delete-saved-ai-recipe?id=<%= savedAiRecipe._id %>" class="btn btn-danger" 
                                       onclick="return confirm('Bạn có chắc chắn muốn xóa công thức này?')">
                                        <i class="fas fa-trash-alt"></i> Xóa
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Flash Messages -->
                    <% if(typeof message !== 'undefined' && message.length > 0) { %>
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i><%= message %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    <% } %>

                    <% if(typeof error !== 'undefined' && error.length > 0) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i><%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    <% } %>

                    <div class="row">
                        <!-- Recipe Image and Basic Info -->
                        <div class="col-lg-8">
                            <div class="card mb-4">
                                <div class="card-body">
                                    <!-- Recipe Title -->
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <h2 class="mb-0"><%= savedAiRecipe.title %></h2>
                                        <div class="text-end">
                                            <small class="text-muted">Lưu vào:</small><br>
                                            <strong><%= new Date(savedAiRecipe.savedAt).toLocaleDateString('vi-VN') %></strong>
                                        </div>
                                    </div>

                                    <!-- Recipe Image -->
                                    <div class="mb-4">
                                        <% if(savedAiRecipe.imageUrl) { %>
                                            <img src="<%= savedAiRecipe.imageUrl %>" class="recipe-image w-100" alt="<%= savedAiRecipe.title %>">
                                        <% } else { %>
                                            <div class="recipe-image w-100 bg-light d-flex align-items-center justify-content-center">
                                                <div class="text-center text-muted">
                                                    <i class="fas fa-utensils fa-4x mb-3"></i>
                                                    <p>Không có hình ảnh</p>
                                                </div>
                                            </div>
                                        <% } %>
                                    </div>

                                    <!-- Recipe Description -->
                                    <div class="mb-4">
                                        <h5><i class="fas fa-align-left me-2"></i>Mô tả</h5>
                                        <p class="text-muted"><%= savedAiRecipe.description %></p>
                                    </div>

                                    <!-- Recipe Meta Info -->
                                    <div class="recipe-meta mb-4">
                                        <div class="row text-center">
                                            <div class="col-md-3 mb-3 mb-md-0">
                                                <div>
                                                    <i class="fas fa-clock fa-2x mb-2"></i>
                                                    <h6 class="mb-1">Thời gian chuẩn bị</h6>
                                                    <p class="mb-0"><%= savedAiRecipe.preparationTime %> phút</p>
                                                </div>
                                            </div>
                                            <div class="col-md-3 mb-3 mb-md-0">
                                                <div>
                                                    <i class="fas fa-fire fa-2x mb-2"></i>
                                                    <h6 class="mb-1">Thời gian nấu</h6>
                                                    <p class="mb-0"><%= savedAiRecipe.cookingTime %> phút</p>
                                                </div>
                                            </div>
                                            <div class="col-md-3 mb-3 mb-md-0">
                                                <div>
                                                    <i class="fas fa-users fa-2x mb-2"></i>
                                                    <h6 class="mb-1">Khẩu phần</h6>
                                                    <p class="mb-0"><%= savedAiRecipe.servings %> người</p>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div>
                                                    <i class="fas fa-chart-line fa-2x mb-2"></i>
                                                    <h6 class="mb-1">Độ khó</h6>
                                                    <p class="mb-0"><%= savedAiRecipe.difficulty %></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Additional Info -->
                                    <div class="row mb-4">
                                        <div class="col-md-6">
                                            <h6><i class="fas fa-globe me-2"></i>Ẩm thực</h6>
                                            <span class="badge bg-info text-dark fs-6"><%= savedAiRecipe.cuisine %></span>
                                        </div>
                                        <div class="col-md-6">
                                            <% if(savedAiRecipe.estimatedCalories) { %>
                                                <h6><i class="fas fa-fire-alt me-2"></i>Calories (ước tính)</h6>
                                                <span class="badge bg-warning text-dark fs-6"><%= savedAiRecipe.estimatedCalories %> kcal</span>
                                            <% } %>
                                        </div>
                                    </div>

                                    <!-- Tags -->
                                    <% if(savedAiRecipe.tags && savedAiRecipe.tags.length > 0) { %>
                                        <div class="mb-4">
                                            <h6><i class="fas fa-tags me-2"></i>Tags</h6>
                                            <% savedAiRecipe.tags.forEach(function(tag) { %>
                                                <span class="badge bg-light text-dark border tag-badge">#<%= tag %></span>
                                            <% }); %>
                                        </div>
                                    <% } %>
                                </div>
                            </div>

                            <!-- Ingredients -->
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h5 class="mb-0">
                                        <i class="fas fa-list-ul me-2"></i>Nguyên liệu 
                                        <span class="badge bg-primary ms-2"><%= savedAiRecipe.ingredients.length %></span>
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <% savedAiRecipe.ingredients.forEach(function(ingredient, index) { %>
                                        <div class="ingredient-item">
                                            <span class="badge bg-primary rounded-pill me-2"><%= index + 1 %></span>
                                            <%= ingredient %>
                                        </div>
                                    <% }); %>
                                </div>
                            </div>

                            <!-- Instructions -->
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h5 class="mb-0">
                                        <i class="fas fa-clipboard-list me-2"></i>Cách làm 
                                        <span class="badge bg-success ms-2"><%= savedAiRecipe.instructions.length %> bước</span>
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <% savedAiRecipe.instructions.forEach(function(instruction, index) { %>
                                        <div class="instruction-item">
                                            <div class="d-flex align-items-start">
                                                <span class="badge bg-success rounded-pill me-3 mt-1 flex-shrink-0">
                                                    <%= index + 1 %>
                                                </span>
                                                <p class="mb-0 flex-grow-1"><%= instruction %></p>
                                            </div>
                                        </div>
                                    <% }); %>
                                </div>
                            </div>
                        </div>

                        <!-- User Info and Recipe History -->
                        <div class="col-lg-4">
                            <!-- User Information -->
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h5 class="mb-0">
                                        <i class="fas fa-user me-2"></i>Thông tin người dùng
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <% if(savedAiRecipe.userId) { %>
                                        <div class="text-center mb-3">
                                            <% if(savedAiRecipe.userId.avatar) { %>
                                                <img src="/uploads/<%= savedAiRecipe.userId.avatar %>" 
                                                     class="user-avatar rounded-circle mb-2" alt="User Avatar">
                                            <% } else { %>
                                                <div class="user-avatar rounded-circle bg-secondary d-flex align-items-center justify-content-center mx-auto mb-2">
                                                    <i class="fas fa-user fa-2x text-white"></i>
                                                </div>
                                            <% } %>
                                            <h6 class="mb-0"><%= savedAiRecipe.userId.firstname %> <%= savedAiRecipe.userId.lastname %></h6>
                                            <small class="text-muted"><%= savedAiRecipe.userId.email %></small>
                                        </div>
                                    <% } else { %>
                                        <div class="text-center mb-3">
                                            <div class="user-avatar rounded-circle bg-secondary d-flex align-items-center justify-content-center mx-auto mb-2">
                                                <i class="fas fa-user-slash fa-2x text-white"></i>
                                            </div>
                                            <h6 class="mb-0 text-muted">Người dùng không tồn tại</h6>
                                            <small class="text-muted"><%= savedAiRecipe.userEmail %></small>
                                        </div>
                                    <% } %>

                                    <hr>

                                    <div class="row text-center">
                                        <div class="col-6">
                                            <div class="border-end">
                                                <h6 class="text-muted mb-1">Tạo lúc</h6>
                                                <small><%= new Date(savedAiRecipe.recipeCreatedAt).toLocaleDateString('vi-VN') %></small>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <h6 class="text-muted mb-1">Lưu lúc</h6>
                                            <small><%= new Date(savedAiRecipe.savedAt).toLocaleDateString('vi-VN') %></small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Device Info -->
                            <% if(savedAiRecipe.deviceInfo) { %>
                                <div class="card mb-4">
                                    <div class="card-header">
                                        <h5 class="mb-0">
                                            <i class="fas fa-mobile-alt me-2"></i>Thông tin thiết bị
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <p class="mb-2">
                                            <strong>Nền tảng:</strong> <%= savedAiRecipe.deviceInfo.platform || 'N/A' %>
                                        </p>
                                        <p class="mb-0">
                                            <strong>Phiên bản:</strong> <%= savedAiRecipe.deviceInfo.version || 'N/A' %>
                                        </p>
                                    </div>
                                </div>
                            <% } %>

                            <!-- Recipe ID Info -->
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0">
                                        <i class="fas fa-info-circle me-2"></i>Thông tin kỹ thuật
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <p class="mb-2">
                                        <strong>Recipe ID:</strong><br>
                                        <code class="small"><%= savedAiRecipe.id %></code>
                                    </p>
                                    <p class="mb-2">
                                        <strong>Database ID:</strong><br>
                                        <code class="small"><%= savedAiRecipe._id %></code>
                                    </p>
                                    <p class="mb-0">
                                        <strong>Trạng thái:</strong>
                                        <span class="badge bg-success ms-1"><%= savedAiRecipe.status %></span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>