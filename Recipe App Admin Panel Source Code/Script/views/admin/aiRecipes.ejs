<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Generated Recipes - Recipe Admin Panel</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <%- include('../layouts/sidebar') %>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Header -->
            <%- include('../layouts/header') %>

            <!-- Content -->
            <div class="content">
                <div class="container-fluid">
                    <!-- Page Title -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center">
                                <h1 class="h3 mb-0">User Recipe AI</h1>
                                <div class="d-flex gap-2">
                                    <button class="btn btn-primary" onclick="loadStats()">
                                        <i class="fas fa-chart-bar"></i> Statistics
                                    </button>
                                    <button class="btn btn-success" onclick="exportRecipes()">
                                        <i class="fas fa-download"></i> Export
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Stats Cards -->
                    <div class="row mb-4" id="statsCards" style="display: none;">
                        <div class="col-md-3">
                            <div class="card bg-primary text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h5 class="card-title">Total AI Recipes</h5>
                                            <h2 id="totalRecipes">-</h2>
                                        </div>
                                        <div class="align-self-center">
                                            <i class="fas fa-robot fa-2x"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h5 class="card-title">Today's Recipes</h5>
                                            <h2 id="todayRecipes">-</h2>
                                        </div>
                                        <div class="align-self-center">
                                            <i class="fas fa-calendar-day fa-2x"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0">Top AI Recipe Creators</h5>
                                </div>
                                <div class="card-body">
                                    <div id="topUsers"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Flash Messages -->
                    <% if(typeof message !== 'undefined' && message.length > 0) { %>
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <%= message %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    <% } %>

                    <% if(typeof error !== 'undefined' && error.length > 0) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    <% } %>

                    <!-- AI Recipes Table -->
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">AI Generated Recipes (<%= aiRecipes.length %>)</h5>
                        </div>
                        <div class="card-body">
                            <% if(aiRecipes.length > 0) { %>
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>#</th>
                                                <th>Recipe Name</th>
                                                <th>User</th>
                                                <th>Serving Size</th>
                                                <th>Cooking Time</th>
                                                <th>Difficulty</th>
                                                <th>Created At</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% aiRecipes.forEach((recipe, index) => { %>
                                                <tr>
                                                    <td><%= index + 1 %></td>
                                                    <td>
                                                        <strong><%= recipe.recipeName %></strong>
                                                        <% if(recipe.tags && recipe.tags.length > 0) { %>
                                                            <br>
                                                            <% recipe.tags.forEach(tag => { %>
                                                                <span class="badge bg-secondary me-1"><%= tag %></span>
                                                            <% }) %>
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <% if(recipe.userId) { %>
                                                            <strong><%= recipe.userId.firstname %> <%= recipe.userId.lastname %></strong><br>
                                                            <small class="text-muted"><%= recipe.userId.email %></small>
                                                        <% } else { %>
                                                            <span class="text-muted">Unknown User</span>
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-info"><%= recipe.servingSize %> people</span>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-warning text-dark"><%= recipe.cookingTime %> min</span>
                                                    </td>
                                                    <td>
                                                        <% if(recipe.difficultyLevel === 'Easy') { %>
                                                            <span class="badge bg-success">Easy</span>
                                                        <% } else if(recipe.difficultyLevel === 'Medium') { %>
                                                            <span class="badge bg-warning text-dark">Medium</span>
                                                        <% } else { %>
                                                            <span class="badge bg-danger">Hard</span>
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <small><%= new Date(recipe.createdAt).toLocaleDateString() %></small><br>
                                                        <small class="text-muted"><%= new Date(recipe.createdAt).toLocaleTimeString() %></small>
                                                    </td>
                                                    <td>
                                                        <div class="btn-group" role="group">
                                                            <a href="/ai-recipe-detail?id=<%= recipe._id %>" 
                                                               class="btn btn-sm btn-outline-primary" 
                                                               title="View Details">
                                                                <i class="fas fa-eye"></i> View Only
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            <% } else { %>
                                <div class="text-center py-5">
                                    <i class="fas fa-robot fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">No AI Generated Recipes Found</h5>
                                    <p class="text-muted">Users haven't created any AI recipes yet.</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        async function loadStats() {
            const statsCards = document.getElementById('statsCards');
            
            if (statsCards.style.display === 'none') {
                try {
                    const response = await fetch('/ai-recipe-stats');
                    const data = await response.json();
                    
                    if (data.status) {
                        document.getElementById('totalRecipes').textContent = data.data.totalAiRecipes;
                        document.getElementById('todayRecipes').textContent = data.data.todayAiRecipes;
                        
                        const topUsersHtml = data.data.topUsers.map((user, index) => 
                            `<div class="d-flex justify-content-between align-items-center mb-2">
                                <div>
                                    <strong>${user.name}</strong><br>
                                    <small class="text-muted">${user.email}</small>
                                </div>
                                <span class="badge bg-primary">${user.count} recipes</span>
                            </div>`
                        ).join('');
                        
                        document.getElementById('topUsers').innerHTML = topUsersHtml || '<p class="text-muted">No data available</p>';
                    }
                    
                    statsCards.style.display = 'block';
                } catch (error) {
                    console.error('Error loading stats:', error);
                }
            } else {
                statsCards.style.display = 'none';
            }
        }

        function exportRecipes() {
            // Implement export functionality
            alert('Export functionality will be implemented soon!');
        }
    </script>
</body>

</html>
